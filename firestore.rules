rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /user_organization/{document} {
      allow read: if resource.data.userId == request.auth.uid;
    }

    match /organizations/{organization} {
      allow read: if get(/databases/$(database)/documents/user_organization/$(getAccessId(organization))).data.access in ['admin', 'manager', 'member'];
    }

    match /groups/{group} {
      allow read: if isSignedIn();
    }

    match /events/{event} {
      allow read: if isSignedIn();
    }
  }

  function getAccessId(organization) {
    return request.auth.uid + '-' + organization;
  }

  function isSignedIn() {
    return request.auth != null;
  }
}
